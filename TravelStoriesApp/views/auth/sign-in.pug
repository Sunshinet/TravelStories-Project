extends ../main

block content
  script(src="../../public/javascript/login.js")
    form(action='/auth/sign-in', method="POST")
        input(type="text" name="username" placeholder="Username")
        input(type="password" name="password" placeholder="Password")
        button
            | Login
            
    .container
        .row
          .col-md-12
            .pr-wrap
              .pass-reset
                label
                    | Enter the email you signed up with
                input(type='email', placeholder='Email')
                input.pass-reset-submit.btn.btn-success.btn-sm(type='submit', value='Submit')
            .wrap
               p.form-title
                 | Sign In
               form.login
                input(type='text', placeholder='Username')
                input(type='password', placeholder='Password')
                input.btn.btn-success.btn-sm(type='submit', value='Sign In')
                .remember-forgot
                  .row
                        .col-md-6
                         .checkbox
                            label
                              input(type='checkbox')
                              |  Remember Me
                        .col-md-6.forgot-pass-content
                          a.forgot-pass(href='javascript:void(0)') Forgot Password