extends main

block content

    script(src='../public/javascript/grid')
    link(rel='stylesheet', href='../public/css/grid.css')
    
    .container
        .well
            if context.hasAvatar == true
                img.group.list-group-image(src='../public/avatars/' + context._id, alt='user avatar')
            else
                img.group.list-group-image(src='https://cdn0.iconfinder.com/data/icons/users-android-l-lollipop-icon-pack/24/user-512.png', alt='generic avatar')
            .caption
            h1.group.inner.list-group-item-heading
                =context.username
            h4.group.inner.list-group-item-text
                =context.bio
            h4.group.inner.list-group-item-text
                span.glyphicon.glyphicon-map-marker
                    | 
                    =context.username
                    |  has travelled to places such as 
                    if context.stories
                      each story in context.stories
                        if story.visible
                            =story.place.name
                            |, 
                    | and many, many more!
            .row
                a.btn.btn-success(href='/user/' + context._id)
                    | Visit Profile
                if context.email != ""
                    a.right-btn.btn.btn-info.btn-rounded(href='mailto:' + context.email)
                        | Contact Me

    if context.stories
      each story in context.stories
        div.singleStory
          h1
            | Story Title: 
            =story.titleStory
          h1
          | Story Places: 
          =story.place.name
          h1
          | Story Body: 
          =story.body

    form.form-group(action='/user/avatar' method='POST' id='uploadForm' enctype='multipart/form-data')
      input.form-control(name='avatar' id= 'place' required type='file')
      input.form-control(name='id' type='hidden' value=context._id)
      button.btn.btn-info.btn-rounded(type='submit' name="submit")
        | Upload Avatar
