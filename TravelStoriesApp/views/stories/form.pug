extends ../main
block content
  script(src="https://cloud.tinymce.com/stable/tinymce.min.js")
  script
            |tinymce.init({ selector:'textarea' , themes: "modern"});
 
  div.form
    form(action="/stories" method="POST" id="useThis")
      input.form-control(name="title" required type="text" placeholder="Title")
      input.form-control(name="author" required type="text" placeholder="Author")
      button.btn.btn-success
        | Save
    textarea(name="body" form="useThis")#tinymce
        